<section style="padding:0px;">
    <div class="row mb80 mb-xs-0">
        <div class="col-md-8 col-md-offset-2 text-center">
            <h2>行业资讯</h2>
        </div>
    </div>
    @{
        foreach (var item in news)
        {
            <div class="container">
                <hr>
                <div class="row v-align-children margin-bottom-10">
                    <div class="col-sm-3 text-center">
                        <img class="cast-shadow" alt="Screenshot" src="@item.Cover">
                    </div>
                    <div class="col-sm-9">
                        <h3 class="uppercase" style="padding-top:10px;">@item.Title</h3>
                        <h5 class="text-gray-dark">@item.Created.ToString("yyyy年MM月dd日")</h5>
                        <p>@item.SubTitle</p>
                    </div>
                </div>
            </div>
        }
    }
</section>


