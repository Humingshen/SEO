<!-- 表格状态列 -->
<script type="text/html" id="tableState">
    <input type="checkbox" lay-filter="ckState" value="{{d.id}}" lay-skin="switch"
           lay-text="正常|锁定" {{d.status=='1'?'checked':''}} />
</script>
<!-- 表单弹窗 -->
<script type="text/html" id="modelExp">
    <form id="modelExpForm" lay-filter="modelExpForm" class="layui-form model-form">
        <input name="experimentId" type="hidden" />
        <div class="layui-form-item">
            <label class="layui-form-label">名称：</label>
            <div class="layui-input-block">
                <input name="experimentName" placeholder="请输入名称" type="text" class="layui-input" maxlength="20"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item text-right">
            <button class="layui-btn layui-btn-primary" type="button" ew-event="closePageDialog">取消</button>
            <button class="layui-btn" lay-filter="modelExpSubmit" lay-submit>保存</button>
        </div>
    </form>
</script>

@section scripts{
    <script>
        layui.use(['layer', 'form', 'table', 'util', 'admin', 'tableX', 'laydate', 'element', 'upload', 'fileChoose'], function () {
            var $ = layui.jquery;
            var layer = layui.layer;
            var form = layui.form;
            var table = layui.table;
            var util = layui.util;
            var admin = layui.admin;
            var tableX = layui.tableX;
            var laydate = layui.laydate;
            var element = layui.element;
            var upload = layui.upload;
            var fileChoose = layui.fileChoose;


            // 渲染表格
            var insTb = tableX.render({
                elem: '#experimentTypeTable',
                url: '/api//Content/v1/products',
                headers: { 'Authorization': localStorage.getItem("token") },
                page: true,
                cellMinWidth: 100,
                cols: [[
                    { type: 'numbers' },
                    {
                        align: 'center', templet: function (d) {
                            var url = d.imgPath;
                            return '<img src="' + url + '" class="tdImg" tb-img/>';
                        }, title: '封面', width: 90, unresize: false
                    },
                    { field: 'title', title: '标题', sort: true , width: 120},
                    { field: 'de', title: '摘要' , width: 120},
                    { field: 'code', title: '编号' },
                    { field: 'total', title: '拍卖价', minWidth: 120, width: 120 },
                    { field: 'cur', title: '当前', minWidth: 120, width: 120 },
                    { field: 'hb', title: '回报区间' },
                    { field: 'oneHb', title: '代理回报' },
                    { field: 'hB1', title: '初级回报' },
                    { field: 'hB2', title: '中级回报' },
                    { field: 'hB3', title: '高级回报' },
                    { field: 'hB4', title: '钻石回报' },
                    {
                        field: 'addDate', title: '创建时间', sort: true, templet: function (d) {
                            return util.toDateString(d.addDate);
                        }, width: 180
                    },
                    { field: 'status', sort: true, templet: '#tableState', title: '状态', width: 100 },
                    { align: 'center', title: '操作', toolbar: '#tableBar', minWidth: 130, width: 180 }
                ]]
            });

            // 搜索
            form.on('submit(searchSubmit)', function (data) {
                insTb.reload({ where: data.field, page: { curr: 1 } });
            });

            // 添加
            $("#btnAdd").click(function () {
                showEditModel();
            });
            
            // 修改用户状态
            form.on('switch(ckState)', function (obj) {
                layer.load(2);
                $.ajax({
                    headers: {
                         'Authorization': localStorage.getItem("token")
                    },
                    type: "GET",
                    url: "/api//Content/v1/pshow",
                    data:{ id: obj.elem.value, state: obj.elem.checked ? 1 : 0 },
                    success: function (res) {
                      layer.closeAll('loading');
                        if (res.code == 200) {
                            layer.msg(res.msg, { icon: 1 });
                        } else {
                            layer.msg(res.msg, { icon: 2 });
                            $(obj.elem).prop('checked', !obj.elem.checked);
                            form.render('checkbox');
                        }
                    }
                });
            });
            // 工具条点击事件
            table.on('tool(experimentTypeTable)', function (obj) {

                var data = obj.data;
                //alert(JSON.stringify(data));
                var layEvent = obj.event;
                if (layEvent == 'edit') {
                    showEditModel(data);
                } else if (layEvent == 'del') {
                    doDel(data.id);
                } else if (layEvent == 'upload') {
                    // 打开新的窗体
                    layer.open({
                        type: 2 //Page层类型
                        , area: ['800px', '800px']
                        , title: data.title
                        , shade: 0.6 //遮罩透明度
                        , maxmin: true //允许全屏最小化
                        , anim: 1 //0-6的动画形式，-1不开启
                        , content: '/system/artEdit/' + data.id
                    });
                } else if (layEvent == 'look') {
                    var $a = $(obj.tr).find('a[lay-event="look"]');
                    var offset = $a.offset();
                    var top = offset.top;
                    var left = offset.left;
                    layer.open({
                        type: 1,
                        title: false,
                        area: '530px',
                        offset: [top + 'px', (left - 530 + $a.outerWidth()) + 'px'],
                        shade: .01,
                        shadeClose: true,
                        fixed: false,
                        content: '<table id="lookSSXMTable" lay-filter="lookSSXMTable"></table>',
                        success: function () {
                            tableX.render({
                                elem: '#lookSSXMTable',
                                url: '../../json/syxj_list2.json?experimentTypeId=' + data.id,
                                page: true,
                                cellMinWidth: 100,
                                cols: [[
                                    { type: 'numbers' },
                                    { field: 'experimentName', title: '名称', sort: true },
                                    {
                                        field: 'createTime', title: '创建时间', sort: true, templet: function (d) {
                                            return util.toDateString(d.createTime);
                                        }
                                    }
                                ]],
                                size: ''
                            });
                        }
                    });
                }
            });
            // 显示表单弹窗
            function showEditModel(expTpe) {

                admin.open({
                    type: 1,
                    title: (expTpe ? '修改' : '添加') + '产品',
                    content: $('#modelExpType').html(),
                    area: '700px',
                    success: function (layero, dIndex) {
                        var allDate = $(document).find('.layer-date')
                        allDate.each(function (index, el) {
                            $(this).removeAttr("lay-key")
                            laydate.render({
                                elem: this,
                                format: 'yyyy-MM-dd'
                            });
                        });
                        laydate.render({
                            elem: '#edtDateFormAdv1', show: true //直接显示
                        });
                         //普通图片上传
                        var uploadInst = upload.render({
                            elem: '#test1'
                            , url: '/api/upload/'
                            , Headers: { token: 1 }
                            , before: function (obj) {
                                //预读本地文件示例，不支持ie8
                                //obj.preview(function (index, file, result) {
                                //    $('#demo1').attr('src', result); //图片链接（base64）
                                //});
                            }
                            , done: function (res) {
                                //如果上传失败
                                if (res.errno > 0) {
                                    return layer.msg('上传失败');
                                }
                                //上传成功
                                $('#imgPath').val(res.data[0]); //图片链接（base64）
                            }
                            , error: function () {
                                layer.msg("上传失败！");
                            }
                        });
                        //$(layero).children('.layui-layer-content').css('overflow', 'visible'); expTpe ?
                        var url = '/api//Content/v1/product';
                        var isExpAdd = expTpe ? false : true;
                        // 回显数据
                        form.val('modelExpTypeForm', expTpe);
                        // 表单提交事件
                        form.on('submit(modelExpTypeSubmit)', function (data) {
                            layer.load(2);
                            $.ajax({
                                headers: {
                                    'Authorization': localStorage.getItem("token")
                                },
                                type: "POST",
                                url: url,
                                dataType: "JSON",
                                data: data.field,
                                success: function (res) {
                                    layer.closeAll('loading');
                                    if (res.code == 200) {
                                        layer.close(dIndex);
                                        insTb.reload({ page: { curr: 1 } });
                                        layer.msg(res.msg, { icon: 1 });
                                    } else {
                                        layer.msg(res.msg, { icon: 2 });
                                    }
                                }
                            });
                            return false;
                        });

                    }
                });
            }
            function doPost(id) {
                // 上传
                upload.render({
                    elem: '#file-btn-upload',
                    accept: 'file'
                });
            }
            
            // 删除
            function doDel(experimentTypeId) {
                layer.confirm('确定要删除吗？', {
                    shade: .1,
                    skin: 'layui-layer-admin'
                }, function (i) {
                    layer.load(2);
                    $.ajax({
                        headers: {
                            'Authorization': localStorage.getItem("token")
                        },
                        type: "POST",
                        url: "/api//Content/v1/productDel",
                        data: { id: experimentTypeId },
                        success: function (res) {
                            layer.closeAll('loading');
                            if (res.code == 200) {
                                layer.msg(res.msg, { icon: 1 });
                                insTb.reload();
                            } else {
                                layer.msg(res.msg, { icon: 2 });
                                $(obj.elem).prop('checked', !obj.elem.checked);
                                form.render('checkbox');
                            }
                        }
                    });
                });
            }
            // 点击图片放大
            $(document).off('click.tbImg').on('click.tbImg', '[tb-img]', function () {
                layer.photos({ photos: { data: [{ src: $(this).attr('src') }] }, shade: .1, closeBtn: true });
            });

        });

    </script>

}