
@{
    ViewBag.Title = "Article";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}
<style type="text/css">
    .tdImg {
        width: 50px;
        height: 50px;
        max-width: none;
        cursor: zoom-in;
    }
</style>

<!-- 正文开始 -->
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-body">
            <!-- 表格顶部工具栏 -->
            <div class="layui-form toolbar">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <label class="layui-form-label w-auto">名称：</label>
                        <div class="layui-input-inline mr0">
                            <input name="keyword" class="layui-input" type="text" placeholder="输入关键词" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <button class="layui-btn icon-btn" lay-filter="searchSubmit" lay-submit>
                            <i class="layui-icon">&#xe615;</i>搜索
                        </button>
                        <button id="btnAdd" class="layui-btn icon-btn"><i class="layui-icon">&#xe654;</i>添加</button>
                    </div>
                </div>
            </div>
            <table class="layui-table" id="experimentTypeTable" lay-filter="experimentTypeTable"></table>
        </div>
    </div>
    <blockquote class="layui-elem-quote layui-text" style="margin-top: 15px;background: #fff;">
        说明
    </blockquote>
</div>

<!-- 表格操作列 -->
<script type="text/html" id="tableBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="edit">修改</a>
    @*<a class="layui-btn layui-btn-primary layui-btn-xs " lay-event="upload">图文</a>*@
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<!-- 表单弹窗 -->
<script type="text/html" id="modelExpType">
    <form id="modelExpTypeForm" lay-filter="modelExpTypeForm" class="layui-form model-form">
        <input name="id" type="hidden" />
        <div class="layui-form-item">
            <label class="layui-form-label">名称：</label>
            <div class="layui-input-block">
                <input name="title" placeholder="输入名称" type="text" class="layui-input" maxlength="20"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">封面：</label>
            <div class="layui-input-block">
                <input id="imgPath" name="imgPath" placeholder="输入封面地址" type="text" class="layui-input" maxlength="20"
                       lay-verType="tips" lay-verify="required" />
                <button type="button" class="layui-btn" id="test1">上传封面</button>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">摘要：</label>
            <div class="layui-input-block">
                <textarea name="de" placeholder="输入摘要" class="layui-textarea" lay-vertype="tips" lay-verify="required" required=""></textarea>
            </div>
        </div>

        @*<div class="layui-form-item">
            <label class="layui-form-label">标签：</label>
            <div class="layui-input-block">
                <input name="tags" type="text" class="layui-input"
                       lay-verType="tips" lay-verify="" />
            </div>
        </div>*@
        <div class="layui-form-item">
            <label class="layui-form-label">编号：</label>
            <div class="layui-input-block">
                <input name="code" placeholder="输入编号" type="text" class="layui-input" maxlength="20"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">投资金额：</label>
            <div class="layui-input-block">
                <input name="total" placeholder="输入投资金额" type="number" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">最小投资：</label>
            <div class="layui-input-block">
                <input name="minPrice" placeholder="输入投资金额" type="number" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">回报率：</label>
            <div class="layui-input-block">
                <input name="hb" placeholder="输入回报率" type="text" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">预计代理回报：</label>
            <div class="layui-input-block">
                <input name="oneHb" placeholder="输入预计代理回报" type="text" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">初级回报：</label>
            <div class="layui-input-block">
                <input name="hB1" placeholder="输入初级回报率" type="number" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">中级回报：</label>
            <div class="layui-input-block">
                <input name="hB2" placeholder="输入中级回报率" type="number" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">高级回报：</label>
            <div class="layui-input-block">
                <input name="hB3" placeholder="输入高级回报率" type="number" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">钻石回报：</label>
            <div class="layui-input-block">
                <input name="hB4" placeholder="输入钻石回报率" type="number" class="layui-input"
                       lay-verType="tips" lay-verify="required" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">目标公开:</label>
            <div class="layui-input-inline" style="display: block;width: auto;float: none;">
                <input type="radio" name="status" value="0" title="不公开" checked=""><div class="layui-unselect layui-form-radio layui-form-radioed"><i class="layui-anim layui-icon layui-anim-scaleSpring"></i><div>不公开</div></div>
                <input type="radio" name="status" value="1" title="公开"><div class="layui-unselect layui-form-radio"><i class="layui-anim layui-icon"></i><div>公开</div></div>
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">投资周期：</label>
            <div class="layui-input-block">
                <input name="issue" placeholder="输入周期" type="text" class="layui-input" maxlength="20"
                       lay-verType="tips" lay-verify="required" value="1/1" />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">创建时间：</label>
            <div class="layui-input-block">
                <input id="edtDateFormAdv1" name="addDate" type="text" placeholder="创建时间" class="layui-input  layer-date date-icon" autocomplete="off" lay-vertype="tips" lay-verify="required" required="" lay-key="2">
            </div>
        </div>

        <div class="layui-form-item text-right">
            <button class="layui-btn layui-btn-primary" type="button" ew-event="closePageDialog">取消</button>
            <button class="layui-btn" lay-filter="modelExpTypeSubmit" lay-submit>保存</button>
        </div>
    </form>
</script>
<!-- 表格操作列 -->
<script type="text/html" id="ssxmTableBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="edit">修改</a>
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="upload">封面</a>
